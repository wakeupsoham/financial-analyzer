  const generateCalculations = () => `/**
 * Financial Calculations Utility Functions
 */

/**
 * Calculate arithmetic returns
 * Formula: (P1 - P0) / P0
 */
export const calculateArithmeticReturns = (prices) => {
  const returns = [];
  for (let i = 1; i < prices.length; i++) {
    returns.push((prices[i].price - prices[i-1].price) / prices[i-1].price);
  }
  return returns;
};

/**
 * Calculate logarithmic returns
 * Formula: ln(P1 / P0)
 */
export const calculateLogReturns = (prices) => {
  const returns = [];
  for (let i = 1; i < prices.length; i++) {
    returns.push(Math.log(prices[i].price / prices[i-1].price));
  }
  return returns;
};

/**
 * Calculate cumulative returns
 */
export const calculateCumulativeReturns = (returns) => {
  let cumulative = 1;
  return returns.map(r => {
    cumulative *= (1 + r);
    return cumulative - 1;
  });
};

/**
 * Calculate rolling volatility
 * @param {Array} returns - Array of returns
 * @param {number} window - Rolling window size
 * @returns {Array} Annualized volatilities
 */
export const calculateRollingVolatility = (returns, window) => {
  const volatilities = [];
  for (let i = window - 1; i < returns.length; i++) {
    const windowReturns = returns.slice(i - window + 1, i + 1);
    const mean = windowReturns.reduce((a, b) => a + b, 0) / window;
    const variance = windowReturns.reduce((sum, r) => 
      sum + Math.pow(r - mean, 2), 0) / (window - 1);
    volatilities.push(Math.sqrt(variance) * Math.sqrt(252));
  }
  return volatilities;
};

/**
 * Calculate Sharpe Ratio
 * Formula: (Return - Risk-Free Rate) / Volatility
 */
export const calculateSharpe = (returns, riskFreeRate) => {
  const annualizedReturn = returns.reduce((a, b) => a + b, 0) / returns.length * 252;
  const mean = returns.reduce((a, b) => a + b, 0) / returns.length;
  const variance = returns.reduce((sum, r) => 
    sum + Math.pow(r - mean, 2), 0) / (returns.length - 1);
  const volatility = Math.sqrt(variance) * Math.sqrt(252);
  return (annualizedReturn - riskFreeRate) / volatility;
};

/**
 * Calculate Sortino Ratio
 * Only penalizes downside volatility
 */
export const calculateSortino = (returns, riskFreeRate) => {
  const annualizedReturn = returns.reduce((a, b) => a + b, 0) / returns.length * 252;
  const mean = returns.reduce((a, b) => a + b, 0) / returns.length;
  const downsideReturns = returns.filter(r => r < mean);
  const downsideVariance = downsideReturns.reduce((sum, r) => 
    sum + Math.pow(r - mean, 2), 0) / (downsideReturns.length - 1);
  const downsideDeviation = Math.sqrt(downsideVariance) * Math.sqrt(252);
  return (annualizedReturn - riskFreeRate) / downsideDeviation;
};

/**
 * Calculate basic statistics
 */
export const calculateStatistics = (returns) => {
  const mean = returns.reduce((a, b) => a + b, 0) / returns.length;
  const variance = returns.reduce((sum, r) => 
    sum + Math.pow(r - mean, 2), 0) / (returns.length - 1);
  const stdDev = Math.sqrt(variance);
  
  return {
    mean,
    variance,
    stdDev,
    max: Math.max(...returns),
    min: Math.min(...returns)
  };
};`;

