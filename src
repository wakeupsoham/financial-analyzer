import React, { useState, useEffect } from 'react';
import { LineChart, Line, BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer } from 'recharts';
import { TrendingUp, Activity, BarChart3, Download, Github } from 'lucide-react';

const FinancialAnalyzer = () => {
  const [tickers, setTickers] = useState(['AAPL', 'MSFT', 'GOOGL']);
  const [newTicker, setNewTicker] = useState('');
  const [dateRange, setDateRange] = useState(252);
  const [rollingWindow, setRollingWindow] = useState(21);
  const [riskFreeRate, setRiskFreeRate] = useState(0.03);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState('');
  const [data, setData] = useState(null);
  const [activeTab, setActiveTab] = useState('cumulative');
  const [showDownload, setShowDownload] = useState(false);

  const generatePriceData = (ticker, days) => {
    const data = [];
    let price = 100 + Math.random() * 100;
    const volatility = 0.015 + Math.random() * 0.02;
    const drift = 0.0003;
    
    const startDate = new Date();
    startDate.setDate(startDate.getDate() - days);
    
    for (let i = 0; i < days; i++) {
      const date = new Date(startDate);
      date.setDate(date.getDate() + i);
      
      if (date.getDay() === 0 || date.getDay() === 6) continue;
      
      const randomShock = (Math.random() - 0.5) * 2;
      price = price * Math.exp(drift + volatility * randomShock);
      
      data.push({
        date: date.toISOString().split('T')[0],
        price: price
      });
    }
    
    return data;
  };

  const calculateArithmeticReturns = (prices) => {
    const returns = [];
    for (let i = 1; i < prices.length; i++) {
      returns.push((prices[i].price - prices[i-1].price) / prices[i-1].price);
    }
    return returns;
  };

  const calculateLogReturns = (prices) => {
    const returns = [];
    for (let i = 1; i < prices.length; i++) {
      returns.push(Math.log(prices[i].price / prices[i-1].price));
    }
    return returns;
  };

  const calculateCumulativeReturns = (returns) => {
    let cumulative = 1;
    return returns.map(r => {
      cumulative *= (1 + r);
      return cumulative - 1;
    });
  };

  const calculateRollingVolatility = (returns, window) => {
    const volatilities = [];
    for (let i = window - 1; i < returns.length; i++) {
      const windowReturns = returns.slice(i - window + 1, i + 1);
      const mean = windowReturns.reduce((a, b) => a + b, 0) / window;
      const variance = windowReturns.reduce((sum, r) => sum + Math.pow(r - mean, 2), 0) / (window - 1);
      volatilities.push(Math.sqrt(variance) * Math.sqrt(252));
    }
    return volatilities;
  };

  const calculateSharpe = (returns, riskFree) => {
    const annualizedReturn = returns.reduce((a, b) => a + b, 0) / returns.length * 252;
    const mean = returns.reduce((a, b) => a + b, 0) / returns.length;
    const variance = returns.reduce((sum, r) => sum + Math.pow(r - mean, 2), 0) / (returns.length - 1);
    const volatility = Math.sqrt(variance) * Math.sqrt(252);
    return (annualizedReturn - riskFree) / volatility;
  };

  const calculateSortino = (returns, riskFree) => {
    const annualizedReturn = returns.reduce((a, b) => a + b, 0) / returns.length * 252;
    const mean = returns.reduce((a, b) => a + b, 0) / returns.length;
    const downsideReturns = returns.filter(r => r < mean);
    const downsideVariance = downsideReturns.reduce((sum, r) => sum + Math.pow(r - mean, 2), 0) / (downsideReturns.length - 1);
    const downsideDeviation = Math.sqrt(downsideVariance) * Math.sqrt(252);
    return (annualizedReturn - riskFree) / downsideDeviation;
  };

  const analyzeData = () => {
    setLoading(true);
    setError('');
    
    try {
      const results = {};
      
      tickers.forEach(ticker => {
        const prices = generatePriceData(ticker, dateRange);
        const arithmeticReturns = calculateArithmeticReturns(prices);
        const logReturns = calculateLogReturns(prices);
        const cumulativeReturns = calculateCumulativeReturns(arithmeticReturns);
        const rollingVol = calculateRollingVolatility(logReturns, rollingWindow);
        
        const mean = arithmeticReturns.reduce((a, b) => a + b, 0) / arithmeticReturns.length;
        const variance = arithmeticReturns.reduce((sum, r) => sum + Math.pow(r - mean, 2), 0) / (arithmeticReturns.length - 1);
        const volatility = Math.sqrt(variance) * Math.sqrt(252);
        
        results[ticker] = {
          prices,
          arithmeticReturns,
          logReturns,
          cumulativeReturns,
          rollingVol,
          statistics: {
            avgDailyReturn: mean,
            annualizedReturn: mean * 252,
            volatility,
            sharpe: calculateSharpe(arithmeticReturns, riskFreeRate),
            sortino: calculateSortino(arithmeticReturns, riskFreeRate),
            maxReturn: Math.max(...arithmeticReturns),
            minReturn: Math.min(...arithmeticReturns)
          }
        };
      });
      
      setData(results);
    } catch (err) {
      setError('Error analyzing data: ' + err.message);
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    analyzeData();
  }, [tickers, dateRange, rollingWindow, riskFreeRate]);

  const addTicker = () => {
    if (newTicker && !tickers.includes(newTicker.toUpperCase())) {
      setTickers([...tickers, newTicker.toUpperCase()]);
      setNewTicker('');
    }
  };

  const removeTicker = (ticker) => {
    if (tickers.length > 1) {
      setTickers(tickers.filter(t => t !== ticker));
    }
  };

  const downloadFiles = () => {
    const files = {
      'README.md': generateREADME(),
      'package.json': generatePackageJson(),
      'src/App.jsx': generateAppComponent(),
      'src/components/FinancialAnalyzer.jsx': generateMainComponent(),
      'src/utils/calculations.js': generateCalculations(),
      '.gitignore': generateGitignore(),
      'LICENSE': generateLicense()
    };

    Object.entries(files).forEach(([filename, content]) => {
      const blob = new Blob([content], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = filename;
      a.click();
      URL.revokeObjectURL(url);
    });

    setShowDownload(false);
  };

  const generateREADME = () => `# Financial Returns & Volatility Analyzer ðŸ“ˆ

A comprehensive React-based tool for analyzing financial time series data with returns calculation, volatility analysis, and risk metrics.

![Financial Analyzer](https://img.shields.io/badge/React-18.x-blue)
![License](https://img.shields.io/badge/license-MIT-green)

## Features

- **Returns Calculation**
  - Arithmetic returns: (Pâ‚ - Pâ‚€) / Pâ‚€
  - Logarithmic returns: ln(Pâ‚ / Pâ‚€)
  - Cumulative returns tracking

- **Volatility Analysis**
  - Rolling volatility with customizable windows
  - Annualized volatility metrics
  - Volatility clustering visualization

- **Risk Metrics**
  - Sharpe Ratio
  - Sortino Ratio
  - Maximum/Minimum daily returns

- **Interactive Visualizations**
  - Cumulative returns comparison
  - Rolling volatility charts
  - Return distribution histograms

## Installation

\`\`\`bash
