  const prepareCumulativeData = () => {
    if (!data) return [];
    const chartData = [];
    const maxLength = Math.max(...Object.values(data).map(d => d.cumulativeReturns.length));
    
    for (let i = 0; i < maxLength; i++) {
      const point = { index: i + 1 };
      tickers.forEach(ticker => {
        if (data[ticker].cumulativeReturns[i] !== undefined) {
          point[ticker] = (data[ticker].cumulativeReturns[i] * 100).toFixed(2);
        }
      });
      chartData.push(point);
    }
    return chartData;
  };

  const prepareVolatilityData = () => {
    if (!data) return [];
    const chartData = [];
    const maxLength = Math.max(...Object.values(data).map(d => d.rollingVol.length));
    
    for (let i = 0; i < maxLength; i++) {
      const point = { index: i + rollingWindow };
      tickers.forEach(ticker => {
        if (data[ticker].rollingVol[i] !== undefined) {
          point[ticker] = (data[ticker].rollingVol[i] * 100).toFixed(2);
        }
      });
      chartData.push(point);
    }
    return chartData;
  };

  const prepareDistributionData = (ticker) => {
    if (!data || !data[ticker]) return [];
    const returns = data[ticker].arithmeticReturns;
    const bins = 40;
    const min = Math.min(...returns);
    const max = Math.max(...returns);
    const binWidth = (max - min) / bins;
    
    const histogram = new Array(bins).fill(0);
    returns.forEach(r => {
      const binIndex = Math.min(Math.floor((r - min) / binWidth), bins - 1);
      histogram[binIndex]++;
    });
    
    return histogram.map((count, i) => ({
      return: ((min + (i + 0.5) * binWidth) * 100).toFixed(2),
      frequency: count
    }));
  };

  const colors = ['#3b82f6', '#ef4444', '#10b981', '#f59e0b', '#8b5cf6'];

  return (
    <div className="w-full h-full bg-gradient-to-br from-slate-900 to-slate-800 text-white p-6 overflow-auto">
      <div className="max-w-7xl mx-auto">
        <div className="mb-8 flex justify-between items-start">
          <div>
            <h1 className="text-4xl font-bold mb-2 flex items-center gap-3">
              <TrendingUp className="w-10 h-10" />
              Returns & Volatility Analyzer
            </h1>
            <p className="text-slate-300">
              Comprehensive financial time series analysis with returns calculation and risk metrics
            </p>
          </div>
          <button
            onClick={() => setShowDownload(true)}
            className="bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 px-6 py-3 rounded-lg font-medium flex items-center gap-2 transition-all"
          >
            <Github className="w-5 h-5" />
            Download for GitHub
          </button>
        </div>

        {showDownload && (
          <div className="fixed inset-0 bg-black/70 flex items-center justify-center z-50 p-4">
            <div className="bg-slate-800 rounded-lg p-8 max-w-2xl w-full border border-slate-700">
              <h2 className="text-2xl font-bold mb-4 flex items-center gap-2">
                <Github className="w-6 h-6" />
                Download Repository Files
              </h2>
              <p className="text-slate-300 mb-6">
                This will download all necessary files to create a complete GitHub repository:
              </p>
              <ul className="space-y-2 mb-6 text-sm">
                <li className="flex items-center gap-2">
                  <span className="text-green-400">âœ“</span> README.md - Complete documentation
                </li>
                <li className="flex items-center gap-2">
                  <span className="text-green-400">âœ“</span> package.json - Dependencies
                </li>
                <li className="flex items-center gap-2">
                  <span className="text-green-400">âœ“</span> Source code - React components
                </li>
                <li className="flex items-center gap-2">
                  <span className="text-green-400">âœ“</span> Utility functions - Financial calculations
                </li>
                <li className="flex items-center gap-2">
                  <span className="text-green-400">âœ“</span> .gitignore - Git configuration
                </li>
                <li className="flex items-center gap-2">
                  <span className="text-green-400">âœ“</span> LICENSE - MIT License
                </li>
              </ul>
              <div className="bg-slate-700/50 rounded p-4 mb-6 text-sm">
                <p className="font-semibold mb-2">Next Steps:</p>
                <ol className="list-decimal list-inside space-y-1 text-slate-300">
                  <li>Create a new repository on GitHub</li>
                  <li>Initialize git: <code className="bg-slate-900 px-2 py-1 rounded">git init</code></li>
                  <li>Add files and commit</li>
                  <li>Push to GitHub</li>
                  <li>Run <code className="bg-slate-900 px-2 py-1 rounded">npm install</code> and <code className="bg-slate-900 px-2 py-1 rounded">npm run dev</code></li>
                </ol>
              </div>
              <div className="flex gap-3">
                <button
                  onClick={downloadFiles}
                  className="flex-1 bg-green-600 hover:bg-green-700 px-6 py-3 rounded-lg font-medium flex items-center justify-center gap-2"
                >
                  <Download className="w-5 h-5" />
                  Download All Files
                </button>
                <button
                  onClick={() => setShowDownload(false)}
                  className="px-6 py-3 rounded-lg font-medium bg-slate-700 hover:bg-slate-600"
                >
                  Cancel
                </button>
              </div>
            </div>
          </div>
        )}

        <div className="bg-slate-800 rounded-lg p-6 mb-6 border border-slate-700">
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
            <div>
              <label className="block text-sm font-medium mb-2">Days to Analyze</label>
              <input
                type="number"
                value={dateRange}
                onChange={(e) => setDateRange(Number(e.target.value))}
                className="w-full bg-slate-700 border border-slate-600 rounded px-3 py-2 text-white"
                min="30"
                max="1260"
              />
            </div>
            <div>
              <label className="block text-sm font-medium mb-2">Rolling Window</label>
              <input
                type="number"
                value={rollingWindow}
                onChange={(e) => setRollingWindow(Number(e.target.value))}
                className="w-full bg-slate-700 border border-slate-600 rounded px-3 py-2 text-white"
                min="5"
                max="60"
              />
            </div>
            <div>
              <label className="block text-sm font-medium mb-2">Risk-Free Rate (%)</label>
              <input
                type="number"
                value={riskFreeRate * 100}
                onChange={(e) => setRiskFreeRate(Number(e.target.value) / 100)}
                className="w-full bg-slate-700 border border-slate-600 rounded px-3 py-2 text-white"
                step="0.1"
              />
            </div>
            <div>
              <label className="block text-sm font-medium mb-2">Add Ticker</label>
              <div className="flex gap-2">
                <input
                  type="text"
                  value={newTicker}
                  onChange={(e) => setNewTicker(e.target.value.toUpperCase())}
                  onKeyPress={(e) => e.key === 'Enter' && addTicker()}
                  placeholder="TSLA"
                  className="flex-1 bg-slate-700 border border-slate-600 rounded px-3 py-2 text-white"
                />
                <button
                  onClick={addTicker}
                  className="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded font-medium"
                >
                  Add
                </button>
              </div>
            </div>
          </div>
          
          <div className="flex flex-wrap gap-2">
            {tickers.map(ticker => (
              <span
                key={ticker}
                className="bg-slate-700 px-3 py-1 rounded-full text-sm flex items-center gap-2"
              >
                {ticker}
                {tickers.length > 1 && (
                  <button
                    onClick={() => removeTicker(ticker)}
                    className="text-red-400 hover:text-red-300"
                  >
                    Ã—
                  </button>
                )}
              </span>
            ))}
          </div>
        </div>

        {error && (
          <div className="bg-red-900/50 border border-red-700 rounded-lg p-4 mb-6">
            {error}
          </div>
        )}

        {loading && (
          <div className="text-center py-12">
            <Activity className="w-12 h-12 mx-auto animate-spin mb-4" />
            <p>Analyzing financial data...</p>
          </div>
        )}

        {data && !loading && (
          <>
